{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "ES2018",
    "module": "ES6",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "types": ["vuetify"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vuetify/types",
      "./d.ts"
    ],
  },
  "importHelpers": true,
  "exclude": ["node_modules"],
  "include": ["src", "d.ts"]
}
